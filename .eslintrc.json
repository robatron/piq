{
    "env": {
        "jest/globals": true,
        "es2020": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:jest/recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": ["jest"],
    "rules": {},
    "overrides": [
        {
            "files": ["*.ts"],
            "extends": ["plugin:@typescript-eslint/recommended"],
            "parser": "@typescript-eslint/parser",
            "plugins": ["@typescript-eslint", "jest"]
        }
    ]
}
